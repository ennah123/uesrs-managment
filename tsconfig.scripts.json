{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "noEmit": false
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["scripts/**/*", "lib/**/*", "models/**/*"]
}